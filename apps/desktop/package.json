{
  "name": "luma-desktop",
  "private": true,
  "version": "0.1.0",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev:renderer": "vite",
    "dev:main": "tsc -p electron/tsconfig.json --watch",
    "dev:electron": "wait-on dist-electron/main.js && electron dist-electron/main.js",
    "dev": "concurrently -k \"npm:dev:renderer\" \"npm:dev:main\" \"npm:dev:electron\"",
    "start": "concurrently -k \"npm:dev\" \"sh -c 'cd ../../services/core-go && go run main.go'\"",
    "build:main": "tsc -p electron/tsconfig.json",
    "build": "vite build",
    "dist": "npm run build && electron-builder"
  },
  "build": {
    "appId": "com.luma.desktop",
    "productName": "Luma",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    },
    "extraResources": [
      {
        "from": "bin",
        "to": "bin",
        "filter": [
          "**/*"
        ]
      }
    ]
  },
  "dependencies": {
    "vue": "3.4.29"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "5.0.5",
    "concurrently": "8.2.2",
    "electron": "30.0.9",
    "electron-builder": "^26.0.12",
    "typescript": "5.4.5",
    "vite": "5.2.11",
    "wait-on": "7.2.0"
  }
}
